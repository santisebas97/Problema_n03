<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/textview_llave" />

    <EditText
        android:id="@+id/editTextNumberLlave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/edittextnumber_hint_llave"
        android:inputType="number"
        android:minHeight="48dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/buttonCodificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_text_codificar" />

    <Button
        android:id="@+id/buttonDescodificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_text_descodificar" />
</LinearLayout>